<!-- Trade Hustle Header -->
<header class="th-header">
  <div class="th-header-inner">

    <!-- Left: Hamburger -->
    <div class="th-left">
      <button class="menu-toggle" aria-label="Open menu">&#9776;</button>
    </div>

    <!-- Center: Logo -->
    <div class="th-center">
      <img 
        src="{{ '20250821_1804_Gold_Glowing_Logo_remix_01k37dx7wwfg1se651zc24z0ty_1.png' | file_url }}" 
        alt="Trade Hustle Logo" 
        class="th-logo">
    </div>

    <!-- Right: Search -->
    <div class="th-right">
      <form action="/search" method="get" role="search">
        <input 
          type="search" 
          name="q" 
          placeholder="Search..." 
          class="th-search" 
          aria-label="Search">
      </form>
    </div>
  </div>

  <!-- Hero Titles -->
  <div class="th-hero-title">
    <h1 class="main-title">WELCOME TO THE GRIND</h1>
    <p class="sub-title">Built for the Trade. Backed by Hustle.</p>
  </div>
</header>

<!-- Slide-out Mobile Menu -->
<nav class="th-mobile-menu" id="mobileMenu">
  <button class="menu-close" aria-label="Close menu">&times;</button>
  <ul>
    <li><a href="/">Home</a></li>
    <li><a href="/collections/all">Shop</a></li>
    <li><a href="/pages/resume-kit">Resume Kit</a></li>
    <li><a href="/pages/book">Book Pre-Sale</a></li>
    <li><a href="/contact">Contact</a></li>
  </ul>
</nav>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const toggle = document.querySelector('.menu-toggle');
  const closeBtn = document.querySelector('.menu-close');
  const menu = document.getElementById('mobileMenu');

  toggle.addEventListener('click', () => {
    menu.classList.add('open');
    document.body.style.overflow = 'hidden';
  });

  closeBtn.addEventListener('click', () => {
    menu.classList.remove('open');
    document.body.style.overflow = '';
  });
});
</script>

