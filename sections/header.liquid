{% stylesheet %}
.th-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #000000, #111111);
  padding: 1rem;
}

.th-header-left,
.th-header-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.th-header-center {
  flex: 3;
  text-align: center;
}

.th-header-title {
  font-size: 1.8rem;
  font-weight: 900;
  color: #FFD700; /* Hustle Yellow */
  text-shadow: 0 0 10px #E10600; /* Hustle Red glow */
  margin: 0;
}

.th-header-subtitle {
  font-size: 1rem;
  color: #0099FF; /* Electric Blue */
  margin-top: 0.2rem;
}

/* Logo under subtitle */
.th-header-logo {
  margin-top: 0.5rem;
}

.th-header-logo img {
  max-width: 140px; /* adjust size */
  height: auto;
  display: inline-block;
  filter: drop-shadow(0 0 15px #FFD700);
}
{% endstylesheet %}

<header class="th-header">
  <div class="th-header-left">
    <!-- Left slot: burger / menu -->
  </div>

  <div class="th-header-center">
    <h1 class="th-header-title">WELCOME TO THE GRIND</h1>
    <div class="th-header-subtitle">Built for the Trade. Backed by Hustle.</div>

    <!-- Logo directly under subtitle -->
    <div class="th-header-logo">
      <img src="https://cdn.shopify.com/s/files/1/0755/4046/3871/files/20250821_1804_Gold_Glowing_Logo_remix_01k37dx7wwfg1se651zc24z0ty_1.png?v=1755817591" 
           alt="Trade Hustle Logo">
    </div>
  </div>

  <div class="th-header-right">
    <!-- Right slot: search / icons -->
  </div>
</header>
