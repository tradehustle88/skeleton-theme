<!-- Trade Hustle Header -->
<header class="th-header">
  <div class="th-header-inner">

    <!-- Left: Hamburger -->
    <div class="th-left">
      <button class="menu-toggle" aria-label="Open menu">
        &#9776;
      </button>
    </div>

    <!-- Center: Logo -->
    <div class="th-center">
      <img 
        src="{{ 'trade-hustle-logo.png' | asset_url }}" 
        alt="Trade Hustle Logo" 
        class="th-logo"
      >
    </div>

    <!-- Right: Search -->
    <div class="th-right">
      <form action="/search" method="get" role="search">
        <input 
          type="search" 
          name="q" 
          placeholder="Search..." 
          class="th-search" 
          aria-label="Search"
        >
      </form>
    </div>

  </div>
</header>

