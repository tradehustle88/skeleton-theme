<header class="th-header">
  <!-- Left: Hamburger -->
  <div class="th-header-left">
    <button class="hamburger" id="hamburger-toggle" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <!-- Center: Title + Subtitle + Logo -->
  <div class="th-header-center">
    <h1 class="th-header-title">WELCOME TO THE GRIND</h1>
    <div class="th-header-subtitle">Built for the Trade. Backed by Hustle.</div>
    <div class="th-header-logo">
      <a href="{{ routes.root_url }}">
        <img src="https://cdn.shopify.com/s/files/1/0755/4046/3871/files/20250821_1804_Gold_Glowing_Logo_remix_01k37dx7wwfg1se651zc24z0ty_1.png?v=1755817591" 
             alt="Trade Hustle Logo">
      </a>
    </div>
  </div>

  <!-- Right: Search Icon -->
  <div class="th-header-right">
    <button class="search-btn" id="search-toggle" aria-label="Search">üîç</button>
  </div>

  <!-- Hidden nav tray -->
  <nav class="menu-tray" id="menu-tray">
    <ul>
      {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>

  <!-- Hidden search tray -->
  <div class="search-tray" id="search-tray">
    <form action="/search" method="get" role="search">
      <input type="search" name="q" placeholder="Search‚Ä¶" aria-label="Search">
    </form>
  </div>
</header>

<style>
/* Header layout */
.th-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #000000, #111111);
  padding: 1rem;
  position: relative;
  z-index: 1000;
}

.th-header-left, .th-header-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.th-header-center {
  flex: 3;
  text-align: center;
}

/* Title + subtitle */
.th-header-title {
  font-size: 1.8rem;
  font-weight: 900;
  color: #FFD700;
  text-shadow: 0 0 10px #E10600;
  margin: 0;
}

.th-header-subtitle {
  font-size: 1rem;
  color: #0099FF;
  margin-top: 0.2rem;
}

.th-header-logo img {
  max-width: 140px;
  height: auto;
  margin-top: 0.5rem;
  filter: drop-shadow(0 0 15px #FFD700);
}

/* Hamburger button */
.hamburger {
  background: none;
  border: none;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 5px;
}

.hamburger span {
  display: block;
  width: 25px;
  height: 3px;
  background: #FFD700; /* Hustle Yellow */
  box-shadow: 0 0 6px #FFD700;
  border-radius: 2px;
}

/* Search button */
.search-btn {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #FFD700;
  filter: drop-shadow(0 0 6px #FFD700);
}

/* Tray menu */
.menu-tray {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #000;
  display: none;
  flex-direction: column;
  align-items: center;
  padding: 1rem;
}

.menu-tray ul {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.menu-tray a {
  color: #fff;
  text-decoration: none;
  font-weight: 700;
  font-size: 1.2rem;
  transition: color 0.3s ease;
}

.menu-tray a:hover {
  color: #FFD700;
}

/* Search tray */
.search-tray {
  position: absolute;
  top: 100%;
  right: 1rem;
  background: #111;
  padding: 0.5rem;
  border-radius: 6px;
  display: none;
}

.search-tray input {
  padding: 6px 10px;
  border-radius: 4px;
  border: none;
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function(){
    const toggle = document.getElementById("hamburger-toggle");
    const tray = document.getElementById("menu-tray");
    const searchToggle = document.getElementById("search-toggle");
    const searchTray = document.getElementById("search-tray");

    toggle.addEventListener("click", () => {
      tray.style.display = tray.style.display === "flex" ? "none" : "flex";
    });

    searchToggle.addEventListener("click", () => {
      searchTray.style.display = searchTray.style.display === "block" ? "none" : "block";
    });
  });
</script>
