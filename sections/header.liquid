<header class="th-header">
  <!-- Left: Hamburger or main nav -->
  <div class="th-header-left">
    <nav class="th-nav">
      <ul>
        {% for link in linklists.main-menu.links %}
          <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>

  <!-- Center: Title, subtitle, logo -->
  <div class="th-header-center">
    <h1 class="th-header-title">WELCOME TO THE GRIND</h1>
    <div class="th-header-subtitle">Built for the Trade. Backed by Hustle.</div>

    <div class="th-header-logo">
      <a href="{{ routes.root_url }}">
        <img src="https://cdn.shopify.com/s/files/1/0755/4046/3871/files/20250821_1804_Gold_Glowing_Logo_remix_01k37dx7wwfg1se651zc24z0ty_1.png?v=1755817591" 
             alt="Trade Hustle Logo">
      </a>
    </div>
  </div>

  <!-- Right: Search icon (optional) -->
  <div class="th-header-right">
    <form action="/search" method="get" role="search" class="header-search">
      <input type="search" name="q" placeholder="Searchâ€¦" aria-label="Search">
    </form>
  </div>
</header>

<style>
.th-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #000000, #111111);
  padding: 1rem;
}

.th-header-left,
.th-header-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.th-header-center {
  flex: 3;
  text-align: center;
}

.th-header-title {
  font-size: 1.8rem;
  font-weight: 900;
  color: #FFD700; /* Hustle Yellow */
  text-shadow: 0 0 10px #E10600;
  margin: 0;
}

.th-header-subtitle {
  font-size: 1rem;
  color: #0099FF; /* Electric Blue */
  margin-top: 0.2rem;
}

.th-header-logo {
  margin-top: 0.5rem;
}

.th-header-logo img {
  max-width: 120px;
  height: auto;
  display: inline-block;
  filter: drop-shadow(0 0 15px #FFD700);
}

/* Nav styling */
.th-nav ul {
  list-style: none;
  display: flex;
  gap: 20px;
  margin: 0;
  padding: 0;
}

.th-nav a {
  color: #fff;
  text-decoration: none;
  font-weight: 600;
  transition: color 0.3s ease;
}

.th-nav a:hover {
  color: #FFD700;
}

/* Search box */
.header-search input {
  padding: 6px 10px;
  border-radius: 4px;
  border: none;
}
</style>
