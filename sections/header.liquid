{% stylesheet %}
.th-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(to right, #000000, #111111);
  padding: 1rem;
}

.th-header-left,
.th-header-right {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.th-header-center {
  flex: 3;
  text-align: center;
}

.th-header-title {
  font-size: 1.8rem;
  font-weight: 900;
  color: #FFD700; /* Hustle Yellow */
  text-shadow: 0 0 10px #E10600; /* Hustle Red glow */
  margin: 0;
}

.th-header-subtitle {
  font-size: 1rem;
  color: #0099FF; /* Electric Blue */
  margin-top: 0.2rem;
}

.hamburger {
  font-size: 1.5rem;
  background: none;
  border: none;
  color: #FFD700;
  cursor: pointer;
}

.search-icon {
  font-size: 1.5rem;
  color: #FFD700;
  text-decoration: none;
}
{% endstylesheet %}

<header class="th-header">
  <!-- Left: Hamburger -->
  <div class="th-header-left">
    <button class="hamburger" aria-label="Toggle Menu">‚ò∞</button>
  </div>

  <!-- Center: Brand statement -->
  <div class="th-header-center">
    <h1 class="th-header-title">WELCOME TO THE GRIND</h1>
    <p class="th-header-subtitle">Built for the Trade. Backed by Hustle.</p>
  </div>

  <!-- Right: Search -->
  <div class="th-header-right">
    <a href="{{ routes.search_url }}" class="search-icon" aria-label="Search">üîç</a>
  </div>
</header>
